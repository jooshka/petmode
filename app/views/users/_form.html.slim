= simple_form_for @user do |f|
  .form-inputs
    = f.input :last_name, label: false, placeholder: t('Last name')
    = f.input :first_name, label: false, placeholder: t('First name')
    = f.input :breeder, label: t('Breeder')
    = f.input :about, label: false, input_html: { placeholder: t('About me'), cols: 100, rows: 4 }
    .upload
      = f.input :avatar, label: false, as: :file
  .form-actions
    = f.button :submit, t('Save')

javascript:
  $(function() {
    $('.user-photo').first().children(':first-child').addClass('change');
    $('#user_avatar').on('change', function(event) {
      var files = event.target.files;
      var image = files[0]
      var reader = new FileReader();
      reader.onload = function(file) {
        var img = new Image(219);
        var img2 = new Image(75);
        img.src = file.target.result;
        img2.src = file.target.result;
        $('#target').html(img);
        $('#target2').html(img2);
      }
      reader.readAsDataURL(image);
    });
  });
